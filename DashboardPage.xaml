<Page
    x:Class="EtherealScepter.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:EtherealScepter"
    
    >

    <ScrollViewer >
        <StackPanel Padding="32" Spacing="24" >

            <!-- Title -->
            <TextBlock
                Text="Dashboard"
                FontSize="28"
                FontWeight="SemiBold" />

            <TextBlock
                Text="System overview"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,12"/>

            <!-- Status Cards -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Network -->
                <Border Grid.Column="0"
                    Padding="16"
                    CornerRadius="8"
                    Background="#1F1F1F">

                    <StackPanel Spacing="8">

                        <!-- Title -->
                        <TextBlock Text="Network"
                   FontWeight="SemiBold"
                   Opacity="0.9"/>

                        <!-- Network Status -->
                        <TextBlock Text="{x:Bind ViewModel.NetworkStatus, Mode=OneWay}"
                   Foreground="{x:Bind ViewModel.NetworkStatusBrush, Mode=OneWay}"
                   FontSize="16"
                   FontWeight="SemiBold"/>

                        <!-- Local IP -->
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="Local IP:"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.LocalIp, Mode=OneWay}"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- WAN IP -->
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="WAN IP:"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.WanIp, Mode=OneWay}"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- NAT / CGNAT -->
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="NAT:"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.CgnatStatus, Mode=OneWay}"
                       FontSize="12"
                       Foreground="{x:Bind ViewModel.NatTypeBrush, Mode=OneWay}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>


                <!-- UPnP -->
                <Border Grid.Column="1"
                        Padding="16"
                        CornerRadius="8"
                        Background="#1F1F1F">
                    <StackPanel Spacing="6">
                        <TextBlock Text="UPnP"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.UpnpStatus,Mode=OneWay}"
                                   Foreground="{x:Bind ViewModel.UpnpStatusBrush,Mode=OneWay}"
                                   FontSize="16"/>
                        <TextBlock Text="{x:Bind ViewModel.NumberOfUPnPDevice,Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- NAT -->
                <Border Grid.Column="2"
                        Padding="16"
                        CornerRadius="8"
                        Background="#1F1F1F">
                    <StackPanel Spacing="6">
                        <TextBlock Text="NAT Type"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.NatType,Mode=OneWay}"
                                   Foreground="{x:Bind ViewModel.NatTypeBrush,Mode=OneWay}"
                                   FontSize="16"/>
                        <TextBlock Text="{x:Bind ViewModel.IsPortForwardingAvailable,Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Summary -->
            <StackPanel Spacing="12">
                <TextBlock Text="Summary"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <Border Padding="16"
                        CornerRadius="8"
                        Background="#1F1F1F">
                    <StackPanel Spacing="6">
                        <TextBlock Text="{x:Bind ViewModel.SummaryText,Mode=OneWay}"/>
                        <TextBlock Text="Last refresh: 12:41"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No errors detected"
                                   Foreground="LightGreen"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
