<Page
    x:Class="EtherealScepter.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EtherealScepter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    Loaded="OnPageLoaded"
    mc:Ignorable="d">

    <ScrollViewer Background="Transparent">
        <StackPanel Padding="32" Spacing="24">

            <!--  Header  -->
            <StackPanel Spacing="4">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Text="Network Diagnostics" />
                <TextBlock Foreground="{ThemeResource TextFillColorSecondary}" Text="Verify, test and diagnose actual network behavior" />
            </StackPanel>

            <!--  External IP Verification  -->
            <Border x:Name="ExternalIpCard" Style="{ThemeResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="External IP Verification" />

                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="6">
                            <TextBlock Foreground="{ThemeResource TextFillColorSecondary}" Text="UPnP Reported IP" />
                            <TextBlock Text="{x:Bind ViewModel.UpnpExternalIp, Mode=OneWay}" />

                            <TextBlock
                                Margin="0,8,0,0"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Text="HTTP Detected IP" />
                            <TextBlock Text="{x:Bind ViewModel.HttpExternalIp, Mode=OneWay}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Foreground="{x:Bind ViewModel.VerificationStatusBrush, Mode=OneWay}" Text="{x:Bind ViewModel.VerificationStatus, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!--  Connectivity Tests  -->
            <Border x:Name="ConnectivityCard" Style="{ThemeResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Connectivity Tests" />

                    <StackPanel Spacing="4">
                        <TextBlock Foreground="{x:Bind ViewModel.PingGatewayBrush, Mode=OneWay}" Text="{x:Bind ViewModel.PingGatewayResult, Mode=OneWay}" />
                        <TextBlock Foreground="{x:Bind ViewModel.PingGoogleBrush, Mode=OneWay}" Text="{x:Bind ViewModel.PingGoogleResult, Mode=OneWay}" />
                        <TextBlock Foreground="{x:Bind ViewModel.HttpReachabilityBrush, Mode=OneWay}" Text="{x:Bind ViewModel.HttpReachabilityResult, Mode=OneWay}" />
                    </StackPanel>

                    <Button
                        HorizontalAlignment="Left"
                        Click="OnRunTestsClicked"
                        Content="Run Tests" />
                </StackPanel>
            </Border>

            <!--  DNS Diagnostics  -->
            <Border x:Name="DnsCard" Style="{ThemeResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="DNS Diagnostics" />

                    <StackPanel Spacing="4">
                        <TextBlock Text="{x:Bind ViewModel.SystemDnsResult, Mode=OneWay}" />
                        <TextBlock Foreground="{x:Bind ViewModel.IspDnsBrush, Mode=OneWay}" Text="{x:Bind ViewModel.IspDnsResult, Mode=OneWay}" />
                        <TextBlock Text="{x:Bind ViewModel.PublicDnsResult, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Port Reachability  -->
            <Border x:Name="PortCard" Style="{ThemeResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Port Reachability Test" />

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBox x:Name="PortTextBox" Width="120" PlaceholderText="Port" />
                        <Button Click="OnTestPortClicked" Content="Test Local" />
                        <Button Click="OnTestExternalPortClicked" Content="Test External" />
                    </StackPanel>

                    <StackPanel Spacing="4">
                        <TextBlock Foreground="{x:Bind ViewModel.PortTestBrush, Mode=OneWay}" Text="{x:Bind ViewModel.PortTestResult, Mode=OneWay}" />
                        <TextBlock Foreground="{x:Bind ViewModel.ExternalPortTestBrush, Mode=OneWay}" Text="{x:Bind ViewModel.ExternalPortTestResult, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Event Timeline  -->
            <Border x:Name="EventsCard" Style="{ThemeResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Recent Network Events" />

                    <TextBlock Foreground="{ThemeResource TextFillColorSecondary}" Text="(Event logging not yet implemented)" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
