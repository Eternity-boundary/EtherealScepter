<Page
    x:Class="EtherealScepter.PortPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:EtherealScepter.Models"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="24">

            <StackPanel Spacing="6">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Text="Port Forwarding" />
                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="Manage discovered UPnP port mappings" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button Click="OnAddRuleClicked" Content="Add Rule" />
            </StackPanel>

            <Border Background="#1F1F1F" CornerRadius="8">
                <StackPanel>

                    <!--  Header  -->
                    <Grid Padding="12" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="Description" />
                        <TextBlock
                            Grid.Column="1"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="Protocol" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="External" />
                        <TextBlock
                            Grid.Column="3"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="Internal" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="Client IP" />
                        <TextBlock
                            Grid.Column="5"
                            FontWeight="SemiBold"
                            Opacity="0.9"
                            Text="" />
                    </Grid>

                    <Rectangle
                        Height="1"
                        Fill="White"
                        Opacity="0.15" />

                    <!--  Rows  -->
                    <ListView ItemsSource="{x:Bind ViewModel.PortMappings, Mode=OneWay}" SelectionMode="None">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:PortMappingInfo">
                                <Grid Padding="12" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{x:Bind Description}" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind Protocol}" />
                                    <TextBlock Grid.Column="2" Text="{x:Bind ExternalPort}" />
                                    <TextBlock Grid.Column="3" Text="{x:Bind InternalPort}" />
                                    <TextBlock Grid.Column="4" Text="{x:Bind InternalClient}" />

                                    <Button
                                        Grid.Column="5"
                                        Click="OnDeleteClicked"
                                        Content="Delete" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
